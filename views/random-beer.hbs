 <div> {{#each beers}}
        <div>
            {{#if this.image_url}}
                <img src="{{ this.image_url }}" alt="{{ this.tagline }}"/>
            {{/if}}
            
                <h3>
                    <a href="/beers/{{this.id}}"></a>
                    {{this.name}}
                    </a>
                </h3>

                <h5>{{this.tagline}}</h5>
                <p>{{this.description}}</p>

                <h3>Food pairing:</h3>
                {{#each this.food_pairing}}
                <li>{{this}} </li>
                {{/each}}
            
        </div>
    {{/each}}

    <div class="buttons">
        <a class="btn btn-primary button-margin" href="/random-beer">Choose another random beer</a>
    </div>
</div>